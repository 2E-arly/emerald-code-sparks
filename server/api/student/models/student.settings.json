{
  "kind": "collectionType",
  "collectionName": "students",
  "info": {
    "name": "Student"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "regex": "([A-Za-z]+)\\s*([A-Za-z]*)\\s+([A-Za-z])\\."
    },
    "character": {
      "type": "string"
    },
    "classroom": {
      "model": "classroom",
      "via": "students"
    },
    "sessions": {
      "collection": "session",
      "via": "students",
      "dominant": true
    },
    "enrolled": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "last_logged_in": {
      "type": "datetime"
    }
  }
}
