{
  "routes": [
    {
      "method": "GET",
      "path": "/sessions",
      "handler": "session.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/sessions/count",
      "handler": "session.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/sessions/:id",
      "handler": "session.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/sessions/student/activities",
      "handler": "session.getStudentActivities",
      "config": {
        "policies": ["global::isStudent"]
      }
    },
    {
      "method": "GET",
      "path": "/sessions/code/:code",
      "handler": "session.findByCode",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/sessions",
      "handler": "session.create",
      "config": {
        "policies": ["global::isMentor", "global::hasClassroom"]
      }
    },
    {
      "method": "POST",
      "path": "/sessions/join",
      "handler": "session.join",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/sessions/:id",
      "handler": "session.update",
      "config": {
        "policies": ["global::isMentor", "global::hasSession"]
      }
    },
    {
      "method": "DELETE",
      "path": "/sessions/:id",
      "handler": "session.delete",
      "config": {
        "policies": []
      }
    }
  ]
}
